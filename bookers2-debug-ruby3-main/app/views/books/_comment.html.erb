<table><% BookComment.all.each do |book_comment| %>
 <tbody>
  <tr>
   <td>
    <td><%= link_to user_path(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image, size:'50x50' %> <br>
          <%= book_comment.user.name %>
          <% end %>
    </td>

   <td><%= book_comment.comment %></td>
 <% if book_comment.user == current_user %> 
   <td><%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete,remote: true,class:"btn btn-danger pull-right" %></td>

   
 <% end %>
 </tr>
 <% end %>
 </tbody>
</table>

<div class="form-group">
 <label for="newcomment">Comment</label>



<%= form_with(model:[book, book_comment], remote: true) do |f| %>
 <%= f.text_area :comment, rows:'5' %>
 <%= f.submit "送信" %>
<% end %>
</div>